<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/zhuye"
            style="@style/layout_style">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/zhuye"
                />

            <TextView
                style="@style/text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="@string/nav_title5_item1" />

        </LinearLayout>

        <View
            style="@style/horizontal_divider_light"
            />

        <LinearLayout
            android:id="@+id/zuopin"
            style="@style/layout_style">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/zuopinshoucang"
                />

            <TextView
                style="@style/text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="@string/nav_title5_item2" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="18px"
            android:background="@color/gray_bkg"
            />

        <LinearLayout
            android:id="@+id/baoming"
            style="@style/layout_style">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/baoming"
                />

            <TextView
                style="@style/text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="我的报名" />

        </LinearLayout>
        <View
            style="@style/horizontal_divider_light"
            />
        <LinearLayout
            android:id="@+id/tiwen"
            style="@style/layout_style">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/tiwen"
                />

            <TextView
                style="@style/text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="我的提问" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="18px"
            android:background="@color/gray_bkg"
            />

        <LinearLayout
            android:id="@+id/guanzhu"
            style="@style/layout_style">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/wodeguanzhu"
                />

            <TextView
                style="@style/text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="@string/nav_title5_item3" />

        </LinearLayout>
        <View
            style="@style/horizontal_divider_light"
            />
        <LinearLayout
            android:id="@+id/fensi"
            style="@style/layout_style">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/wodefensi"
                />

            <TextView
                style="@style/text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="@string/nav_title5_item4" />

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="18px"
            android:background="@color/gray_bkg"
            />

        <LinearLayout
            android:id="@+id/huiyuan"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
        <LinearLayout
            style="@style/layout_style"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/huiyuanzhongxin"
                />

            <TextView
                style="@style/text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="@string/nav_title5_item5"

                />
        </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="18px"
                android:background="@color/gray_bkg"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/shezhi"
            style="@style/layout_style">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/shezhi"
                />

            <TextView
                style="@style/text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:text="@string/nav_title5_item6" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>