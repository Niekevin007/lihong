<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/message_title1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:src="@mipmap/guanfangxiaoxi"/>

        <TextView
            style="@style/text_style"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="官方消息" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@mipmap/jinru"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_title2"
        android:layout_below="@id/message_title1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"           android:padding="5dp"

            android:src="@mipmap/zuopinghudong"/>
        <TextView
            style="@style/text_style"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="作品互动" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@mipmap/jinru"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_bkg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <View
        android:layout_below="@id/message_title2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_bkg"
        />

</RelativeLayout>