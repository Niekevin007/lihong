<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="@drawable/loginfoot"
        android:orientation="vertical"

        android:id="@+id/login_ui_head"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e8ef"
            />

        <LinearLayout
            android:id="@+id/username_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            android:background="@drawable/editui"
            android:layout_marginTop="20dp"
            >

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/hintusername"
                android:textColor="@color/tab_selected_color"
                android:textColorHint="@color/dividing_light"
                android:textCursorDrawable="@drawable/cursor"
                android:text=""
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/userdel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/del"
                android:padding="10dp"
                android:visibility="gone"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/passwrod_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:background="@drawable/editui"
            >

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"

                android:background="@null"
                android:hint="@string/hintpassword"
                android:textColor="@color/tab_selected_color"
                android:textColorHint="@color/dividing_light"
                android:textCursorDrawable="@drawable/cursor"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPassword"
                android:text=""
                android:singleLine="true"
                android:lines="1"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/passdel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/del"
                android:padding="10dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/forget_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="@string/login_forgetpassword"
            android:textColor="@drawable/textcheck"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_gravity="right"
            android:layout_marginRight="47dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbtn"
        android:layout_below="@id/login_ui_head"

        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_button"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/login_three_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/wx_login"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/wechaticon"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="@color/tab_selected_color"
                    android:textSize="12sp"
                    android:gravity="center"
                    />

            </LinearLayout>
            <View
                android:layout_width="60dp"
                android:layout_height="10dp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/qq_login"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:src="@mipmap/qqicon"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="@color/tab_selected_color"
                    android:textSize="12sp"
                    android:gravity="center"
                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_above="@id/login_three_ll"
            android:layout_marginBottom="10dp"
            >
            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="@color/dividing_light"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三方账号登录"
                android:textColor="@color/tab_selected_color"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="@color/dividing_light"

                />


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>