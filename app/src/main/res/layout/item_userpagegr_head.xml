<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/up_gr_sigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text=""
        android:textColor="@color/tab_selected_color"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:id="@+id/up_gr_gz"
                android:text="0"
                android:textColor="@color/textdefcolor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:text="@string/showroom_nav2"
                android:textColor="@color/textdefcolor"
                />

        </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:text="0"
                android:id="@+id/up_gr_fs"
                android:textColor="@color/textdefcolor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/userpage_fans"
                android:textColor="@color/textdefcolor"
                />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
        android:layout_marginLeft="20dp"
              android:gravity="center"
              android:visibility="gone"
            >
              <ImageView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@mipmap/sixin"
                  android:id="@+id/up_gr_sx"
                  android:visibility="invisible"
                  />
        </LinearLayout>

  <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
        android:layout_marginLeft="30dp"
              android:gravity="center"
      android:layout_marginRight="20dp"
            >
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@mipmap/guanzhu"
                  android:id="@+id/up_gr_gz_btn"
                  android:visibility="invisible"
                  />
        </LinearLayout>




        </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@color/gray_bkg"
        />



</LinearLayout>