<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <FrameLayout
        android:id="@+id/img1"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/nowebimg"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/details_img1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/nowebimg" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/mImageView01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/nowebimg"

        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mImageView02"
        app:layout_constraintTop_toBottomOf="@+id/img1">

        <com.quanying.app.view.SquareImageView

            android:id="@+id/details_img2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/nowebimg" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mImageView02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/nowebimg"

        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/mImageView01"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintRight_toRightOf="parent"
        >


        <com.quanying.app.view.SquareImageView
            android:id="@+id/details_img3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/nowebimg" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>