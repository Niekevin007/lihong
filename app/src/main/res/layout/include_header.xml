<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:tag="header"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="zoom"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ub_bck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_action_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:dividerPadding="16dp"
        android:orientation="horizontal"
        android:showDividers="middle">

    </LinearLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/head_yybg"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="15dp"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/touxiang"
        android:layout_width="70dp"
        android:layout_height="70dp"
        fresco:roundedCornerRadius="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        fresco:placeholderImage="@mipmap/nowebimg"

        android:padding="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="30dp"
        />


    <TextView
        android:id="@+id/biaoqian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="摄像师"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/biaoqian"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/touxiang"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:visibility="invisible"

        />

    <ImageView
        android:id="@+id/isVip"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/touxiang"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:src="@mipmap/vip_userhead"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/isQy"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:src="@mipmap/qyrz_c"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        />


    <LinearLayout
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="bottom|left"

        >

        <TextView
            android:id="@+id/up_usersex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""
            android:textColor="@color/tab_selected_color"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/up_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""
            android:textColor="@color/tab_selected_color"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/up_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""
            android:textColor="@color/tab_selected_color"
            android:layout_marginLeft="25dp"

            />

    </LinearLayout>

</RelativeLayout>