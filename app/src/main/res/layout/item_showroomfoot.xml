<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:gravity="left|center"
        >
        <TextView

            style="@style/text_style"
            android:id="@+id/details_content"
            android:text="123"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <View
        style="@style/horizontal_divider_light"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

    <ImageView
        android:id="@+id/details_zanbtn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/zan"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_zan_nub"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical"
            android:text="999"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            />

        <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/xiaoxi"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:id="@+id/details_msgbtn"
        />
        <TextView
            android:id="@+id/details_msg_nub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical"
            android:text="999"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            />

        <ImageView
            android:id="@+id/details_star"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/shoucang"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"

            />

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_bkg"
        />

</LinearLayout>

