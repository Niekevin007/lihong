<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层阴影：左偏移2dp，上偏移4dp -->
    <item
        android:left="6dp"
        android:top="6dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/gray_bkg"
                android:startColor="@color/gray"  />
            <!--圆角-->
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- 第二层前景：：底偏移4dp，右偏移2dp -->
    <item
        android:bottom="6dp"
        android:right="6dp">
        <shape>
            <solid android:color="@android:color/white" />
            <!--圆角-->
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>
