<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/message_title1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mes_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/remind_img" />

        <TextView
            style="@style/text_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="@string/mes_title1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:background="@mipmap/ic_right_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_title2"
        android:layout_below="@id/message_title1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mes_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/remind_img" />

        <TextView
            style="@style/text_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="@string/mes_title2" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:background="@mipmap/ic_right_gray" />
    </LinearLayout>
    <View
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_bkg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <View
        android:layout_below="@id/message_title2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_bkg"
        />

</RelativeLayout>